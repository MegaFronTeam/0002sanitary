							+in-c('checkbox','К','letter')(disabled)
						.swiper-slide
							+in-c('checkbox','Л','letter')
						.swiper-slide
							+in-c('checkbox','М','letter')
						.swiper-slide
							+in-c('checkbox','О','letter')
						.swiper-slide
							+in-c('checkbox','П','letter')
						.swiper-slide
							+in-c('checkbox','С','letter')(disabled)
						.swiper-slide
							+in-c('checkbox','Т','letter')(disabled)
						.swiper-slide
							+in-c('checkbox','Х','letter')
						.swiper-slide
							+in-c('checkbox','Ч','letter')
						.swiper-slide
							+in-c('checkbox','Э','letter')
