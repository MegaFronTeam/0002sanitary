mixin sEpidGuide(data)
	+b.SECTION.sEpidGuide.section#sEpidGuide&attributes(attributes)
		.container
			+b.section-title
				h2 ОТ а до я
			p Наши эпидемиологические знания&nbsp;&mdash; надежное руководство для предпринимателей. В&nbsp;&laquo;Эпидемиологическом Справочнике&raquo; вы&nbsp;найдете ключевые сведения о&nbsp;различных заболеваниях, их&nbsp;воздействии на&nbsp;бизнес, и&nbsp;применимые меры предосторожности.
			+e.container
				h3 Сфера деятельности
				+e.swiper.swiper
					.swiper-wrapper
						.swiper-slide
							+in-c('checkbox','ВСЕ','field')
						.swiper-slide
							+in-c('checkbox','Медицина','field')(checked)
						.swiper-slide
							+in-c('checkbox','Социальные организации','field')(checked)
						.swiper-slide
							+in-c('checkbox','Коммунальные услуги','field')
						.swiper-slide
							+in-c('checkbox','Персональные услуги','field')
						.swiper-slide
							+in-c('checkbox','Гостиницы и туризм','field')
						.swiper-slide
							+in-c('checkbox','Культура, досуг и отдых','field')
						.swiper-slide
							+in-c('checkbox','Детские и молодежные организации','field')
						.swiper-slide
							+in-c('checkbox','Пищевое производство','field')
						.swiper-slide
							+in-c('checkbox','Общественное питание','field')
						.swiper-slide
							+in-c('checkbox','Торговля','field')
						.swiper-slide
							+in-c('checkbox','Промышленность и сельское хозяйство','field')
						.swiper-slide
							+in-c('checkbox','Транспорт','field')
				h3 Наименование заболеваний:
				+e.swiper.swiper
					.swiper-wrapper
						.swiper-slide
							+in-c('checkbox','ВСЕ','letter')
