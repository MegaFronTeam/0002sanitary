mixin topLine()
	// start topLine
	+b.topLine.section#topLine&attributes(attributes)
		.container.container--wide
			+e.row.row
				.col-auto.d-lg-none
					+menu-toggle()
				.col
						+e.logo--rpn(href="/").d-none.d-md-inline-block
							img(src="img/emblem-c.svg", alt="").res-i
						+e.logo--kep(href="/").d-none.d-md-inline-block
							img(src="img/kep-logo.svg", alt="").res-i
						+e.logo(href="/")
							img(src="img/logo.svg", alt="").res-i
				.col-auto.d-lg-none
					+btn('Обращение').--sm.btn.btn-primary
				+e.search-col.col-auto
					button.btn.mobile-search-open.d-md-none
					+search()
				.col-auto.d-none.d-lg-block
					+btn('Отправить обращение').btn.btn-primary
	// end topLine